#include <iostream>
#include <conio.h>
#include <cmath>

using namespace std;

int main()
{
	int x, y;
	double z, V;
	z = 2.5;
	cout.precision(2);
	
	cout << "Value of V" << endl;
	cout << "x = "; cin >> x;
	cout << "y = "; cin >> y;

	
	switch (x)
		{
			case 1:
				if (y > 1 && y < 5)
			 		cout << "V = " << x * y * z << endl;
					else
						cout << "V = " << (x + y) / z << endl;
			case 2:
				if(y <= 5)
					cout << "V = " <<  abs((x - y) / z)<< endl;
					else
						cout << "V = " << x - (sqrt(y + z)) << endl;
		}
			
	if (x >= 3)
		cout << "V = " << x + y + z	 << endl;
		
	_getch();
	return 0;
}
